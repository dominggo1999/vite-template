{
  "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "**/node_modules/**/*.*",
      "**/dist/**/*.*",
      "**/.next/**/*.*",
      "**/.expo/**/*.*",
      "**/.cache/**/*.*",
      ".vscode/settings.json"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": [
      "**/node_modules/**/*.*",
      "**/dist/**/*.*",
      "**/.next/**/*.*",
      "**/.expo/**/*.*",
      "**/.cache/**/*.*",
      ".vscode/settings.json"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingComma": "all",
      "quoteStyle": "double"
    }
  }
}
